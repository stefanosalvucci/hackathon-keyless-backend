<p id="notice"><%= notice %></p>

<h2 class="text-center">Events in real time</h2>

<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Requester</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.status %></td>
        <td><%= event.requester %></td>
        <td><%= event.created_at.strftime("%d/%m/%Y - %h:%m") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if Event.count.zero? %>
  <%= link_to 'New Event', new_event_path %>
<% end %>